<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book / Edit Appointment"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginBottom="24dp"/>

    <!-- Spinner for Clinic Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clinic"
        android:label="@id/spinnerClinicBooking"/>
    <Spinner
        android:id="@+id/spinnerClinicBooking"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"/>

    <!-- Spinner for Clinician Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clinician"
        android:labelFor="@id/spinnerClinicianBooking"/>
    <Spinner
        android:id="@+id/spinnerClinicianBooking"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"/>

    <!-- Patient NHS Number -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient NHS Number"
        android:labelFor="@id/etNhsBooking"/>
    <EditText
        android:id="@+id/etNhsBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter patient's NHS number"
        android:inputType="text"/>

    <!-- Start Time -->
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Appointment Start"
    android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etStartMillis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select date and time"
        android:focusable="false"
        android:clickable="true" />

    <!-- End Time -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment End"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etEndMillis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select date and time"
        android:focusable="false"
        android:clickable="true" />

    <Button
        android:id="@+id/btnConfirmBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Booking"
        android:layout_marginTop="24dp"/>

</LinearLayout>
