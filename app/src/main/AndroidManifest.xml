<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:required="http://schemas.android.com/apk/distribution"
    package="com.example.hospimanagmenetapp">

    <!-- Network access (harmless for Lab 1) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- LAB 2 ONLY: Biometric permission -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <!-- LAB 3 -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="HospiManagmenetApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Launcher / entry point -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Lab 1 screens -->
        <activity
            android:name=".ui.PatientRegistrationActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.AdminLoginActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.AdminPortalActivity"
            android:exported="false"
            android:parentActivityName=".ui.AdminLoginActivity" />

        <!-- LAB 2 ONLY: Appointments host -->

        <activity
            android:name=".feature.appointments.ui.AppointmentActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Lab 3 -->

        <activity android:name=".feature.ehr.ui.PatientSummaryActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".feature.ehr.ui.BarcodeScannerActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".feature.ehr.ui.VitalsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

    </application>
</manifest>